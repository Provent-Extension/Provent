{
  "manifest_version": 3,
  "name": "Provent",
  "version": "1",
  // https://medium.com/@ryanfarney/creating-a-chrome-extension-that-will-open-in-a-new-tab-bc06b7eb54aa

  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "permissions": [
    "tabs", "storage"
  ],

  "action": {
    "default_popup": "popup.html" 
  },

  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*", "https://www.youtube.com/*"],
      "css": ["blocksite.css"],
      "js": ["blocksite.js"]
    }
  ]

}